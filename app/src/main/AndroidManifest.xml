<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plantsapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <queries>
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
            <data android:mimeType="image/*" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourseWorkTest">
        <activity android:name="com.example.plantsapp.ui.main.CreatePlantActivity"/>
        <activity
            android:name="com.example.plantsapp.ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CourseWorkTest.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name="com.example.plantsapp.AlarmReceiver"
            android:process=":remote" >
        </receiver>
    </application>
</manifest>