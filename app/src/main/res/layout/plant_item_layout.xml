<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/plantImageView"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/plant" />

    <TextView
        android:id="@+id/plantNameView"
        android:layout_width="203dp"
        android:layout_height="33dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="Name of a plant"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/plantImageView"
        app:layout_constraintTop_toTopOf="@+id/plantImageView" />


    <ProgressBar
        android:id="@+id/plantStatusView"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="56dp"
        android:layout_height="52dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/circle_shape"
        android:indeterminate="false"
        android:max="100"
        android:progress="5"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/plantNameView"
        app:layout_constraintTop_toBottomOf="@+id/plantNameView" />
</androidx.constraintlayout.widget.ConstraintLayout>
